{% extends 'MapesUserBundle::layout.html.twig' %}


{% block content %}
    
        <h1>Error with your payment</h1>
        <div class="small-12">
		
			<p>There were some errors with your payment. Please <a href="{{retryUrl}}">try again</a> or contact support for help.</p>
                        
                        {% if errors|length > 0 %}
                        
                            <div class="small-12 columns">
                                <ul class="form-error left">
                                {% for error in errors %}
                                        <li>{{error}}</li>
                                {% endfor %}
                                </ul>
                            </div>
                            
                        {% endif %}
			
                        
			<input type="button" value="RETRY" class="button" onClick="window.location='{{retryUrl}}'"/>
			
			
		</div>
 
{% endblock %}