{% if app.user %}

	<li class="user-header bg-light-blue">
		{% if app.user.photo %}
			<img alt="Avatar" class="img-circle" src="{{app.user.photo}}">
		{% else %}
			<img alt="Avatar" class="img-circle" src="/assets/default_avatar.png">
		{% endif %}
		<p>{{app.user.username}}</p>
	</li>

{% endif %}

	<li class="user-footer">

		<div class="pull-right">
			<a class="btn btn-default btn-flat" href="{{path('user_logout')}}"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
		</div>
	</li>
