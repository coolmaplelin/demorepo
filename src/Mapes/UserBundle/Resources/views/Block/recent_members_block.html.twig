<div class="sonata-member-block-recent-member panel panel-default">

        <div class="panel-heading">
            <h3 class="panel-title">
                <i class="fa fa-user"></i>&nbsp;Recent Created Members
            </h3>
        </div>
        <div class="panel-body">
            
            <div class="sonata-customer-block-customer-container list-group">
              {% for entity in members %}
                    <a class="list-group-item" href="{{ path('admin_mapes_user_member_edit', { 'id': entity.id }) }}">
                        {% if entity.IsActivated() %}
                            <span class="label label-success">Activated</span>
                        {% else %} 
                            <span class="label label-danger">Deactivated</span>
                        {% endif %}     
                            
                        &nbsp;    
                        
                        {{ entity.FirstName }} {{ entity.LastName }}
                    
                        -
                        
                        {{ entity.CreatedAt is empty ? "" : entity.CreatedAt|date("F jS Y g:ia") }}
                    </a>
              {% endfor %}

            </div>
            <a class="btn btn-primary btn-block" href="{{ path('admin_mapes_user_member_list') }}"><i class="fa fa-list"></i>&nbsp;View all members</a>
        </div>
</div>