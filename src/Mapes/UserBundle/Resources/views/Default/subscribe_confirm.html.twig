{% extends 'MapesCMSBundle::layout.html.twig' %}



{% block content %}
    
	<div class="small-7">
	
		<h1>Subscription Confirm</h1>
		
		<div class="row">
			<div class="small-3 columns"><label>Name</label></div>
			<div class="small-9 columns">{{temporary_order.first_name}} {{temporary_order.last_name}}</div>
		</div>
			
		<div class="row">
			<div class="small-3 columns"><label>Email</label></div>
			<div class="small-9 columns">{{temporary_order.email}}</div>
		</div>
			
		<div class="row">
			<div class="small-3 columns"><label>Username</label></div>
			<div class="small-9 columns">{{temporary_order.username}}</div>
		</div>
		
		<div class="row">
			<div class="small-3 columns"><label>Subscription</label></div>
			<div class="small-9 columns">{{product.name}} ${{product.price|number_format(1, '.', ',')}}</div>
		</div>
		
		<br/>
		<input type="button" value="Back" class="button" onClick="window.location='{{path('user_subscribe') }}'"/>
		<input type="submit" value="Continue" class="button" onClick="window.location='{{path('user_subscribe_confirm', {'continue':'true'}) }}'"/>
			
	
	</div>
	
	

{% endblock %}
        

        

        
        
 